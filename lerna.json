{
  "packages": ["packages/*"],
  "publish": {
    "allowBranch": "master",
    "message": "chore(release): Publish",
    "ignoreChanges": ["CHANGELOG.md"]
  },
  "command": {
    "version": {
      "changelogPreset": "conventional-changelog-pieh",
      "conventionalCommits": true
    }
  },
  "version": "independent",
  "useWorkspaces": true
}
