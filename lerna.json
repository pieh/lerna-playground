{
  "packages": ["packages/*"],
  "publish": {
    "allowBranch": "master",
    "message": "chore(release): Publish",
    "ignoreChanges": ["CHANGELOG.md", "**/__tests__/**", "**/__mocks__/**"]
  },
  "command": {
    "version": {
      "conventionalCommits": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "version": "independent",
  "useWorkspaces": true
}
